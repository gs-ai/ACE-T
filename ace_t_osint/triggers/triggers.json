{
  "version": "1.0",
  "rules": [
    {
      "id": "credential-leak-keywords",
      "description": "Detect possible credential leaks",
      "include": ["password", "credential", "login"],
      "exclude": ["reset"],
      "window": 200,
      "context": 3,
      "tags": ["credential", "leak"],
      "classification": "credential"
    },
    {
      "id": "pii-ssn-regex",
      "description": "Detect SSN patterns",
      "regex": ["\\b[0-9]{3}-[0-9]{2}-[0-9]{4}\\b"],
      "window": 120,
      "context": 2,
      "tags": ["pii"],
      "classification": "pii"
    },
    {
      "id": "threat-intel-keywords",
      "description": "Threat actor chatter",
      "include": ["0day", "exploit", "cve"],
      "proximity": {
        "terms": ["cve", "exploit"],
        "distance": 10
      },
      "window": 250,
      "context": 4,
      "tags": ["threat", "intel"],
      "classification": "sensitive"
    }
  ]
}
